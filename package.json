{
    "name": "heaps-website",
    "version": "0.1.0",
    "scripts": {
        "haxe": "haxe",
        "lix": "lix",
        "dox:xml": "haxe dox-xml.hxml",
        "dox": "haxe build-run-dox.hxml",
        "wiki": "haxe get-wiki.hxml",
        "samples:generate": "haxe -cp .temp/samples/ -lib hscript -dce no --macro Generator.generateProjects() -D silent --cwd \".temp/samples/\"",
        "samples:compile": "haxe -cp .temp/samples/ --macro Generator.compile() --cwd \".temp/samples/\"",
        "samples": "haxe build-samples.hxml",
        "build": "haxe heaps.io.hxml",
        "deploy": "haxe deploy.hxml",
        "css": "lessc assets/includes/css/styles.less assets/includes/css/styles.min.css --clean-css=\"--s1 --advanced\"",
        "postinstall": "lix download"
    },
    "devDependencies": {
        "vscode-textmate": "3.1.5",
        "uglify-js": "3.1.5",
        "less": "2.7.0",
        "less-plugin-clean-css": "1.5.0",
        "lix": "^15.8.9"
    }
}
